{
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.[jt]sx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.\\.?\\/.+)\\.jsx?$": "$1"
  },
  "testPathIgnorePatterns": ["<rootDir>/tests/e2e/", "<rootDir>/node_modules/"],
  "passWithNoTests": true
}
